<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="550dp"
    android:minWidth="800dp"
    >


    <TextView
        android:id="@+id/sub_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Select player(s) to sub out"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        />

    <!-- top row of players -->


    <!-- top left -->

    <android.support.v7.widget.CardView
        android:id="@+id/sub_current_player1"
        android:layout_width="130dp"
        android:layout_height="160dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="64dp"
        android:layout_below="@id/sub_title_text"
        >

        <RelativeLayout
            android:id="@+id/sub_player1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/player_pic"
                android:id="@+id/sub_current_image1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_current_name1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sub_current_image1"
                android:text="L. James"
                android:layout_marginTop="12dp"
                android:textSize="22sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    

    <!-- top center -->
    <android.support.v7.widget.CardView
        android:id="@+id/sub_current_player2"
        android:layout_width="130dp"
        android:layout_height="160dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/sub_title_text"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/sub_current_player1"
        >

        <RelativeLayout
            android:id="@+id/sub_player2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/player_pic"
                android:id="@+id/sub_current_image2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_current_name2"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sub_current_image2"
                android:text="L. James"
                android:layout_marginTop="12dp"
                android:textSize="22sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



    <!-- top right -->

    <android.support.v7.widget.CardView
        android:id="@+id/sub_current_player3"
        android:layout_width="130dp"
        android:layout_height="160dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/sub_current_player2"
        android:layout_below="@id/sub_title_text"

        >

        <RelativeLayout
            android:id="@+id/sub_player3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/player_pic"
                android:id="@+id/sub_current_image3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_current_name3"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sub_current_image3"
                android:text="L. James"
                android:layout_marginTop="12dp"
                android:textSize="22sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    
    <!-- bottom row of players -->

    <android.support.v7.widget.CardView
        android:id="@+id/sub_current_player4"
        android:layout_width="130dp"
        android:layout_height="160dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="145dp"
        android:layout_below="@id/sub_current_player1"
        >

        <RelativeLayout
            android:id="@+id/sub_player4_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/player_pic"
                android:id="@+id/sub_current_image4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_current_name4"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sub_current_image4"
                android:text="L. James"
                android:layout_marginTop="12dp"
                android:textSize="22sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sub_current_player5"
        android:layout_width="130dp"
        android:layout_height="160dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:layout_below="@id/sub_current_player1"
        android:layout_toRightOf="@id/sub_current_player4"
        >

        <RelativeLayout
            android:id="@+id/sub_player5_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/player_pic"
                android:id="@+id/sub_current_image5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_current_name5"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/sub_current_image5"
                android:text="L. James"
                android:layout_marginTop="12dp"
                android:textSize="22sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    
    <TextView
        android:id="@+id/sub_button_cancel"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="CANCEL"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/sub_cancel_button"
        android:layout_below="@id/sub_current_player5"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="125dp"
        />

    <TextView
        android:id="@+id/sub_button_confirm"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="NEXT"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/sub_cancel_button"
        android:layout_below="@id/sub_current_player5"
        android:layout_toRightOf="@id/sub_button_cancel"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="64dp"
        />


</RelativeLayout>